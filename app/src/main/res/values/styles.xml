<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="movie_details_text_view_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/details_text_view_color</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="movie_details_text_view_label">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="movie_details_linear_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="divider_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:background">@color/divider_view_color</item>
    </style>

    <style name="details_error_message">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/no_data</item>
        <item name="android:textSize">@dimen/detail_error_message_text_size</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="detail_recycler_view">
        <item name="android:layout_margin">@dimen/detail_recycler_view_layout_margin</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="progress_bar">
        <item name="android:layout_width">@dimen/progress_bar_dimension</item>
        <item name="android:layout_height">@dimen/progress_bar_dimension</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="detail_part_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/part_title_layout_marginLeft</item>
        <item name="android:layout_marginTop">@dimen/part_title_layout_marginTop</item>
        <item name="android:textSize">@dimen/part_title_textSize</item>
    </style>

</resources>
